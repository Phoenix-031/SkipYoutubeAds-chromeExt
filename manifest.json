{
    "name":"youtube ad skip",
    "description":"skip youtube ads automatically",
    "version":"1.0.0",
    "manifest_version":3,
    "icons":{
        "16": "./images/yticon-16.png",
        "32": "./images/yticon-32.png",
        "48": "./images/yticon-48.png",
        "128": "./images/yticon-128.png"
    },

    "content_scripts": [
        {
            "matches": [
                "https://youtube.com/*",
                "https://www.youtube.com/*"
            ],
            "js": [
                "script.js"
            ]
        }
    ]
}